		<replace char="ں" with="n"/>
		<replace char="ۓ" with="eh"/> <!-- Yeh Barree with Hamza above (ligature) -->
		<replace char="ئ" with="e"/> <!-- Yeh with Hamza above -->
		<replace char="ے " with="e"/>
